<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net" />
    <section name="CustomSection" type="Pic.DAL.ApplicationConfiguration, Pic.DAL" />
  </configSections>
  <!--Logging-->
  <log4net>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="ColoredConsoleAppender" />
    </root>
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Red" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="White" />
        <backColor value="Red, HighIntensity" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd hh:mm:ss} %-5p - %m%n" />
      </layout>
    </appender>
  </log4net>
  <!--Set file repository path here-->
  <CustomSection applicationDes="C:\wpicador\Bin32\PicGEOM.exe"
                 applicationDxf="C:\wpicador\Bin32\PicGEOM.exe"
                 dataDirectory="K:\Codesion\PicSharp\PicSharpDb\PicParamData\"
                 thumbnailsPath="K:\Codesion\PicSharp\Pic.DAL\Thumbnails\"
                 />
</configuration>